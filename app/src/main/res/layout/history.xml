<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="243dp">

            <ImageView
                android:id="@+id/studBilet"
                android:layout_width="match_parent"
                android:layout_height="243dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/stud"
                app:layout_constraintBottom_toTopOf="@+id/DocStatus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="61dp"
                android:text="Казанский национальный исследовательский технический университет имени А. Н. Туполева"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="270dp"
                android:layout_marginTop="11dp"
                android:text="123456"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginTop="29dp"
                android:text="Моисеев"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="158dp"
                android:layout_marginTop="99dp"
                android:text="Никита"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/studBilet"
                app:layout_constraintTop_toTopOf="@+id/studBilet" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginTop="113dp"
                android:text="Евгеньевич"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/studBilet"
                app:layout_constraintTop_toTopOf="@+id/studBilet" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="132dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="84dp"
                app:layout_constraintStart_toStartOf="@+id/studBilet"
                app:layout_constraintTop_toTopOf="@+id/studBilet"
                app:srcCompat="@android:color/background_dark" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="185dp"
                android:layout_marginTop="128dp"
                android:text="ИКТЗИ"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/studBilet"
                app:layout_constraintTop_toTopOf="@+id/studBilet" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="211dp"
                android:layout_marginTop="143dp"
                android:text="Очная"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/studBilet"
                app:layout_constraintTop_toTopOf="@+id/studBilet" />
        </android.support.constraint.ConstraintLayout>

        <ListView
            android:id="@+id/DocStatus"
            android:layout_width="394dp"
            android:layout_height="150dp"
            android:layout_marginBottom="21dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:columnCount="3"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/registration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studBilet">
            <!--<TableRow-->
                <!--style="@style/AppTheme"-->
                <!--xmlns:android="http://schemas.android.com/apk/res/android">-->
                <!--<TextView-->
                    <!--style="@style/AppTheme"-->
                    <!--android:id="@+id/attrib_name"-->
                    <!--android:textStyle="bold"/>-->
                <!--<TextView-->
                    <!--style="@style/AppTheme"-->
                    <!--android:id="@+id/attrib_value"-->
                    <!--android:gravity="right"-->
                    <!--android:textStyle="normal"/>-->
            <!--</TableRow>-->
        </ListView>

        <Button
            android:id="@+id/registration"
            android:layout_width="97dp"
            android:layout_height="38dp"
            android:layout_marginBottom="81dp"
            android:layout_marginEnd="208dp"
            android:text="Регистрация"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DocStatus" />

        <ScrollView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TableLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>